{
    "version": "7.20.4",
    "packages": [
        "packages/*"
    ],
    "npmClient": "bun",
    "command": {
        "version": {
            "allowBranch": [
                "main",
                "master"
            ],
            "changelog": false,
            "gitTagVersion": false,
            "yes": true,
            "forcePublish": true
        },
        "publish": {
            "ignoreScripts": false,
            "yes": true
        }
    }
}
