{
    "version": "independent",
    "packages": ["packages/*"],
    "npmClient": "pnpm",
    "command": {
        "version": {
            "allowBranch": ["main", "master"],
            "changelog": false,
            "gitTagVersion": true,
            "yes": true,
            "forcePublish": true,
            "exact": true
        },
        "publish": {
            "ignorePrepublish": true,
            "ignoreScripts": true,
            "yes": true
        }
    }
}
