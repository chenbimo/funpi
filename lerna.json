{
    "version": "independent",
    "packages": ["packages/*"],
    "npmClient": "pnpm",
    "loglevel": "verbose",
    "command": {
        "version": {
            "allowBranch": ["main", "master"],
            "changelog": false,
            "gitTagVersion": false,
            "yes": true,
            "forcePublish": true,
            "exact": false
        },
        "publish": {
            "cleanupTempFiles": true,
            "ignorePrepublish": true,
            "ignoreScripts": false,
            "yes": true,
            "removePackageFields": ["devDependencies", "scripts"]
        }
    }
}
